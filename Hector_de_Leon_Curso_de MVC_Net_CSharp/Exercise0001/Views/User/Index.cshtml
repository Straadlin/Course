@model List<Exercise0001.Models.TablesViewModels.UserTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/User/Add")'" value="New" />
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>Name</th>
                <th></th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        <input type="button" value="Delete" class="btn btn-danger" onclick="jsDelete(@item.Id);" /><!--Using AJAX-->
                        <input type="button" value="Edit" class="btn btn-default" onclick="document.location.href='@Url.Content("~/User/Edit/" + item.Id)'" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(id) {
        if (confirm("Are you sure to delete?")) {
            url = "@Url.Content("~/User/Delete")" + "/" + id;

            // AJAX request.
            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/User/")"
                }
                else {
                    alert("An error has ocurred.")
                }
            })
        }
    }
</script>